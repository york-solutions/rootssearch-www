<%- 
  include('partials/header_small');
%>

<div id="main">

  <div class="container">

    <div class="row" id="search-form">
      <% for(var i = 0; i < fields.length; i++){ %>
        <div class="col-sm-6 form-group">
          <label for="data_<%- fields[i].property %>"><%- fields[i].display %></label>
          <input type="text" class="form-control" id="data_<%- fields[i].property %>">
        </div>
      <% } %>
    </div>
  
    <h1>Search</h1>
  
    <div class="row">
      <div id="sites-list"></div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <div class="text-muted pull-right" id="site-settings-toggle">
          <a href="/settings"><span class="glyphicon glyphicon-cog"></span> More sites</a>
        </div>
      </div>
    </div>
  
  </div>

</div>

<script id="sites-template" type="text/x-handlebars-template">
  <div class="col-xs-12 col-sm-6 col-lg-4">
    <button class="site btn btn-lg btn-default">
      <div class="site-name">{{name}}</div>
      <div class="site-search-btn"><span class="glyphicon glyphicon-search"></span></div>
    </div>
  </div>
</script>

