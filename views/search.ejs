%>

<div id="main" class="container">

  <h1>Search</h1>
  
  <div class="row" id="search-form">
    <% for(var i = 0; i < fields.length; i++){ %>
      <div class="col-md-6 form-group">
        <label for="data_<%- fields[i].property %>"><%- fields[i].display %></label>
        <input type="text" class="form-control" id="data_<%- fields[i].property %>">
      </div>
    <% } %>
  </div>
  
  <div id="sites-list"></div>

</div>

<script id="sites-template" type="text/x-handlebars-template">
  <div class="site row">
    <div class="site-name col-md-12">{{name}}</div>
    <div class="col-md-12">
      <div class="row">
        <div class="site-description col-md-10"><p class="text-muted">{{description.en}}</p></div>
        <div class="site-search-col col-md-2"><button class="site-search-btn btn btn-lg btn-rs">Search</div>
      </div>
    </div>
  </div>
</script>

