      property: 'givenName',
      display: 'Given Name'
    },
    {
      property: 'familyName',
      display: 'Family Name'
    },
    {
      property: 'birthDate',
      display: 'Birth Date',
    },
    {
      property: 'birthPlace',
      display: 'Birth Place',
